        formData.append('file', $('#chatDocument')[0].files[0]);
    }

    $.ajax({
        url: "@Url.Action("UploadChatDocument", "Chat")",
        type: "POST",
        data: formData,
        processData: false,
        contentType: false,

        success: function (result) {
