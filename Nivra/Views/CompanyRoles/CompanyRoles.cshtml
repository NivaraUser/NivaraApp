@model Nivara.Models.CompanyRolesModel
@{
    ViewData["Title"] = "Roles";
}

<h1>Register</h1>
@if (ViewBag.Message != null)
{
    <div class="alert alert-success" role="alert">
        @ViewBag.Message
    </div>
}

<div class="form-group">
    <form method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="row col-md-12">
            <div class="col-md-6">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="CompanyId"></label>
                @Html.DropDownListFor(model => model.CompanyId, (IEnumerable<SelectListItem>
                    )ViewData["ListItems"], new { @class = "form-control" })
                <span asp-validation-for="CompanyId" class="text-danger"></span>
            </div>
        </div>
      
        <div class="row col-md-12">
            <div class="col-md-6">
            </div>
            <div class="col-md-3">
            </div>
            <div class="col-md-3">
                <label></label>
                <button type="submit" class="form-control btn-primary">Submit</button>
            </div>
        </div>

    </form>

    <div>
        @Html.ActionLink("Back to List", "CompaniesList", new { @class = "form-control" })
    </div>
</div>


