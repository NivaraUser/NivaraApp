    <script type="text/javascript">
            function successMessage(message) {
                if (!message)
                    message = "@Html.Raw(ViewData["SuccessMessage"])";

                if ($.trim(message).length > 0) {
                    toastr.success(message);
                }
            }

             function errorMessage(message) {
                if (!message)
                    message = "@Html.Raw(ViewData["ErrorMessage"])";

                 if ($.trim(message).length > 0) {
                     toastr.error(message);
                }
            }

        function warningMessage(message) {
                if (!message)
                    message = "@Html.Raw(ViewData["WarningMessage"])";

            if ($.trim(message).length > 0) {
                toastr.warning(message);
                }
            }

            $(function () {
                successMessage();
                errorMessage();
                warningMessage();
            });

function ClearNotification() {
    var preDefinedTasks = [];
    var userTasks = [];
    $(".simplebar-content a").each(function(idx) {
        if ($(this).attr('data-controller') == "PreDefinedTask") {
            preDefinedTasks.push($(this).attr('data-id'));
        }
        else if ($(this).attr('data-controller') == "UserTask") {
            userTasks.push($(this).attr('data-id'));
        }
    });
    $.ajax({
        url: "@Url.Action("MarkReadTaskNotificationList","PreDefinedTask")",
        type: "POST",
        data: { "predefinedTaskId": preDefinedTasks, "userTaskId": userTasks },
        dataType: "json",
        success: function(result) {
            if (result.status == "success") {
                $(".simplebar-content").html('');
            }
            else {
                alert(result.msg);
            }
        },
        error: function() {
        }
    });
}

    </script>
